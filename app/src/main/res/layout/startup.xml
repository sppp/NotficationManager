<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Open Temporary UI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/open_temp_ui" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Test Questionary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/test_questionary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Notification settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buttonOnClicked (NotificationManager)"
                android:id="@+id/debug_notification_settings" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row1">

            <Button
                android:text="Create Test Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buttonOnClicked"
                android:id="@+id/debug_create_notification" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Refresh log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buttonOnClicked"
                android:id="@+id/debug_refresh_log" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/debug_log" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Cancel Last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/debug_cancel_last"
                    android:onClick="buttonOnClicked"
                    android:layout_weight="1" />

                <Button
                    android:text="Cancel All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/debug_cancel_all"
                    android:onClick="buttonOnClicked"
                    android:layout_weight="1" />

                <Button
                    android:text="Release Queue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/debug_release_queue"
                    android:onClick="buttonOnClicked"
                    android:layout_weight="1" />
            </LinearLayout>
        </TableRow>
    </LinearLayout>
</ScrollView>